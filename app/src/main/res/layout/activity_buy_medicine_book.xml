<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".BuyMedicineBookActivity">

    <Button
        android:id="@+id/buttonBMBBooking"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/input_bg"
        android:text="BOOK"
        android:textColorHighlight="@color/purpleDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBMBContactNumber"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="DuplicateIds,DuplicateSpeakableTextCheck,HardcodedText,UnknownId" />

    <EditText
        android:id="@+id/editTextBMBPincode"
        android:layout_width="350dp"
        android:layout_height="49dp"
        android:layout_marginBottom="28dp"
        android:autofillHints=""
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Pincode"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textColorHighlight="#0293A5"
        android:textColorHint="@color/white"
        android:textColorLink="#0B7E8C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBMBAppAddress"
        app:layout_constraintVertical_bias="0.117"
        tools:ignore="DuplicateIds,HardcodedText,LabelFor,NotSibling,TextFields,UnknownId" />

    <EditText
        android:id="@+id/editTextBMBAppAddress"
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:autofillHints=""
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_baseline_security_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textColorHighlight="#0293A5"
        android:textColorHint="@color/white"
        android:textColorLink="#0B7E8C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.656"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBMBAppFullName"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText,LabelFor,TextFields,UnknownId" />

    <EditText
        android:id="@+id/editTextBMBAppFullName"
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:autofillHints=""
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textColorHighlight="#0293A5"
        android:textColorHint="@color/white"
        android:textColorLink="#0B7E8C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBMBTitle"
        app:layout_constraintVertical_bias="0.021"
        tools:ignore="HardcodedText,LabelFor,UnknownId" />

    <EditText
        android:id="@+id/editTextBMBAppContactNumber"
        android:layout_width="346dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:autofillHints=""
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textColorHighlight="#0293A5"
        android:textColorHint="@color/white"
        android:textColorLink="#0B7E8C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBMBAppFullName"
        app:layout_constraintVertical_bias="0.455"
        tools:ignore="DuplicateIds,HardcodedText,LabelFor,NotSibling,TextFields,UnknownId" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="424dp"
        android:layout_height="wrap_content"
        android:text="@string/_24_7_healthcare"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textViewBMBTitle"
        android:layout_width="278dp"
        android:layout_height="108dp"
        android:layout_marginTop="8dp"
        android:text="Please Fill All Details For Booking"
        android:textAlignment="center"
        android:textColor="@color/yellowLight"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.039"
        tools:ignore="HardcodedText,TextSizeCheck" />




</androidx.constraintlayout.widget.ConstraintLayout>